{
  "name": "@everymundo/promise-data-to",
  "version": "1.0.0",
  "description": "This is a helper to perform POST requests using promises and no external dependencies",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "cover": "RETRY_TIMEOUT_MS= MAX_RETRY_ATTEMPTS= SIMULATE= istanbul cover -x '*.test.js' _mocha $@",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "check-lint": "eslint *.js lib/*.js test/*.js routes/*.js",
    "fix-lint": "eslint --fix *.js lib/*.js test/*.js routes/*.js",
    "test": "RETRY_TIMEOUT_MS= MAX_RETRY_ATTEMPTS= SIMULATE= mocha"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run check-lint && npm test",
      "pre-push": "npm run cover && npm run check-coverage"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EveryMundo/promise-data-to.git"
  },
  "keywords": [
    "nodejs",
    "node",
    "http",
    "https",
    "request"
  ],
  "author": "Daniel Santana <git@danielsantana.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EveryMundo/promise-data-to/issues"
  },
  "homepage": "https://github.com/EveryMundo/promise-data-to#readme",
  "devDependencies": {
    "@everymundo/cleanrequire": "^1.1.1",
    "@everymundo/simple-clone": "^1.0.0",
    "chai": "^4.1.2",
    "ghooks": "^2.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.4",
    "sinon": "^4.4.6"
  },
  "dependencies": {
    "@everymundo/json-utils": "^1.0.0",
    "@everymundo/simple-logr": "^1.1.1"
  }
}
